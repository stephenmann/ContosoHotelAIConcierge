@*
    Contoso Hotels AI Concierge Chat Widget
    Floating chat interface for site-wide AI assistance
*@

<!-- Chat Button - Fixed position in bottom-right -->
<button class="chat-button" id="chatButton" title="Chat with AI Concierge">
    <i class="fas fa-comments"></i>
</button>

<!-- Chat Window -->
<div class="chat-window" id="chatWindow">
    <!-- Chat Header -->
    <div class="chat-header">
        <div>
            <h4>
                <i class="fas fa-robot me-2"></i>
                AI Concierge
            </h4>
            <div class="agent-status">
                <span class="status-dot"></span>
                <span id="agentStatusText">Online & Ready</span>
            </div>
        </div>
        <button class="chat-close" id="chatClose" title="Close Chat">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <!-- Chat Messages Area -->
    <div class="chat-messages" id="chatMessages">
        <!-- Welcome Message -->
        <div class="welcome-message">
            <div class="welcome-icon">
                <i class="fas fa-concierge-bell"></i>
            </div>
            <h5>Welcome to Contoso Hotels!</h5>
            <p>I'm your AI concierge assistant. I can help you with room bookings, room service orders, housekeeping requests, and general inquiries.</p>
            
            <!-- Quick Action Buttons -->
            <div class="quick-actions">
                <button class="quick-action" data-message="I want to book a room">
                    <i class="fas fa-bed me-1"></i>Book Room
                </button>
                <button class="quick-action" data-message="I need room service">
                    <i class="fas fa-utensils me-1"></i>Room Service
                </button>
                <button class="quick-action" data-message="I need housekeeping">
                    <i class="fas fa-broom me-1"></i>Housekeeping
                </button>
                <button class="quick-action" data-message="What amenities do you offer?">
                    <i class="fas fa-info-circle me-1"></i>Amenities
                </button>
            </div>
        </div>
    </div>

    <!-- Typing Indicator -->
    <div class="typing-indicator" id="typingIndicator">
        <div class="typing-dots">
            <span></span>
            <span></span>
            <span></span>
        </div>
        <span class="ms-2 text-muted">AI Concierge is typing...</span>
    </div>

    <!-- Chat Input Area -->
    <div class="chat-input-area">
        <textarea 
            class="chat-input" 
            id="chatInput" 
            placeholder="Type your message here..."
            rows="1"
            maxlength="500"></textarea>
        <button class="chat-send-btn" id="chatSendBtn" title="Send Message">
            <i class="fas fa-paper-plane"></i>
        </button>
    </div>
</div>

<!-- Chat JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize chat widget
    const chatWidget = new ContosoHotelsChatWidget();
});
</script>
